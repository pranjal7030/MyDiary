<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF009688"
    tools:context="jain.pranjal.mydiary.SignUpActivity">


    <TextView
        android:id="@+id/textViewSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/buttonSignUp" />


    <EditText
        android:id="@+id/editTextUserNameSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="UserName"
        android:layout_marginTop="57dp"
        android:background="@drawable/edit_text_top"
        android:padding="15dp"
        android:layout_below="@+id/textViewSignUp"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editTextPasswordSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_middle"
        android:padding="15dp"
        android:layout_below="@+id/editTextUserNameSignUp"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="#FF009688"
        android:layout_below="@+id/progressBar2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewGoToLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have account ? LogIn "
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:layout_below="@+id/buttonSignUp"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:id="@+id/progressBar2"
        android:visibility="gone"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextConfirmPass"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editTextConfirmPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_bottom"
        android:padding="15dp"
        android:layout_below="@+id/editTextPasswordSignUp"
        android:layout_alignParentStart="true" />


</RelativeLayout>
