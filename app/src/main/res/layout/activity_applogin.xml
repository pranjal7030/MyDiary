<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF009688"
    tools:context="jain.pranjal.mydiary.SignUpActivity">


    <TextView
        android:id="@+id/textViewLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:text="LogIn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editTextUserNameLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:background="@drawable/edit_text_top"
        android:padding="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="UserName"
        android:layout_below="@+id/textViewLogIn"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editTextPasswordLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="15dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_bottom"
        android:layout_below="@+id/editTextUserNameLogin"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="LogIn"
        android:textColor="#FF009688"
        android:textSize="17sp"
        android:layout_below="@+id/progressBar3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewGoToSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Do not have account ? SignUp"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:layout_below="@+id/buttonLogin"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:id="@+id/progressBar3"
        android:visibility="gone"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/editTextPasswordLogin"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
